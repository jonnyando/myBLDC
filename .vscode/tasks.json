                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "make only",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "make clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "make (rebuild)",
            "dependsOn":[
                "make clean",
                "make only"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
